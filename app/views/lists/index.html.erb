<div class="row">
  <div class="col-md-4 col-md-offset-1 agile">
    <img src="/assets/agile.png"/>
  </div>
</div>
<div class="container-fluid main-container">
  <div class="col-md-2 sidebar">
    <div class="row">
      <div class="absolute-wrapper"> </div>
        <div class="side-menu">
          <div class="side-menu-container">
            <ul class="nav navbar-nav">
              <li class="panel panel-info" id="dropdown">
                <a data-toggle="collapse" href="#dropdown-lvl1">
                  <span class="glyphicon glyphicon-user"></span>Create A New Todo List<span class="caret"></span>
                </a>
                <div id="dropdown-lvl1" class="panel-collapse collapse">
                  <div class="panel-body">
                    <div class="nav navbar-nav">
                      <%= form_for @list, url: {action: "create"}, html: {class: "list-create"} do |f| %>
                        <%  f.label :title %>
                        <%= f.text_field :title %>
                        <%= f.submit "Create List" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-5 list-title"></div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-12 bhoechie-tab-container">
          <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 bhoechie-tab-menu">
            <% @lists. each do |list| %>
            <div class="list-group">
               <a href="lists/<%= list.id %>" data-list-id="<%= list.id %>" class="list-group-item active todo-list">
                 <h5 class="list-title-display"><span class="glyphicon glyphicon-list"></span> <%= list.title %></h5>
              </a>
            </div>
            <% end %>
          </div>
          <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 bhoechie-tab">
            <div class="panel panel-default hidden" id="todo-list">
              <div class="panel-heading">
                <form class="navbar-form" role="search">
                  <div class="input-group col-lg-12" id="new-todo">
                    <div class="input-group-btn">
                      <input type="text" placeholder="Add New Todo Item" id="new-todo-input" class="form-control">
                        <button class="btn btn-default" type="submit" id="add-todo"><i class="glyphicon glyphicon-plus"></i></button>
                    </div>
                  </div>
                </form>
                <div class="bhoechie-tab-content active">
                  <center>
                    <div class="pull-right action-buttons">
                      <div class="btn-group pull-right">
                        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                          <span class="glyphicon glyphicon-cog" style="margin-right: 0px;"></span>
                        </button>
                        <ul class="dropdown-menu slidedown">
                          <li><a href="#"><span class="glyphicon glyphicon-pencil"></span>Edit</a></li>
                          <li><a href="#"><span class="glyphicon glyphicon-trash"></span>Delete</a></li>
                          <li><a href="#"><span class="glyphicon glyphicon-flag"></span>Flag</a></li>
                        </ul>
                      </div>
                    </div>
                  </div>
                  <div class="panel-body">
                    <ul class="list-group" id="todo-item">
              
                    </ul>
                  </div>
                  <div class="panel-footer">
                    <div class="row">
                      <div class="col-md-6">
                        <h6> Total Count <span class="label label-info"></span></h6>
                      </div>
                    </div>
                  </div>
                </center>
              </div>
            </div>
