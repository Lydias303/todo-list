<div class="row">
  <div class="col-md-4 col-md-offset-1 agile">
    <img src="/assets/agile.png"/>
  </div>
</div>
<div class="container">
  <div class="panel-body col-md-4">
    <ul class="nav navbar-nav">
      <li class="panel panel-info" id="dropdown">
        <a data-toggle="collapse" href="#dropdown-lvl1">
          <h3>Create A New Todo List</h3><span class="caret"></span>
        </a>
        <div id="dropdown-lvl1" class="panel-collapse collapse">
          <div class="panel-body">
            <div class="nav navbar-nav">
              <%= form_for @list, url: {action: "create"}, html: {class: "list-create"} do |f| %>
                <%  f.label :title %>
                <%= f.text_field :title %>
                <%= f.submit "Create List" %>
              <% end %>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-12 bhoechie-tab-container">
      <div class="col-lg-4 bhoechie-tab-menu">
        <% @lists.each do |list| %>
        <div class="list-group">
          <span class="list-group-item active">
             <h5 class="list-title-display">
          <span>  <a href="lists/<%= list.id %>" data-list-id="<%= list.id %>" class="list-title-link todo-list"><%= list.title %></a>
              <a href="lists/<%= list.id %>" data-method="delete" rel="nofollow"data-list-id="<%= list.id %>" class="btn btn-default btn-sm delete-button"><i class="glyphicon glyphicon-trash"></i></a></span>
             </h5>
          </span>
        </div>
        <% end %>
      </div>
      <div class="col-lg-8 bhoechie-tab">
        <div class="panel panel-default hidden" id="todo-list">
          <div class="panel-heading">
            <form class="navbar-form">
              <div class="input-group col-lg-12" id="new-todo">
                <div class="input-group-btn">
                  <input type="text" placeholder="Add New Todo Item" id="new-todo-input" class="form-control">
                    <button class="btn btn-default" type="submit" id="add-todo"><i class="glyphicon glyphicon-plus"></i></button>
                </div>
                <div class="list-title">

                </div>
              </div>
            </form>
            <div class="panel-body">
              <ul class="list-group" id="todo-item">

              </ul>
            </div>
          </center>
        </div>
      </div>
